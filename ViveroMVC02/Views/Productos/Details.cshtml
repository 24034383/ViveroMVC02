
@model ViveroMVC02.Models.Producto
@{
    ViewBag.Title = "Details";
}

<h2>Detalle Producto</h2>
<hr />
@using (Html.BeginForm("Details", "Productos", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">

            <div class="form-group">
                @Html.LabelFor(m => m.Categoria)
                @Html.TextBoxFor(m => m.CategoriaId, new { @class = "form-control col-md-6", disabled = "disabled" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NombreProducto)
                @Html.TextBoxFor(m => m.NombreProducto, new { @class = "form-control col-md-6", disabled = "disabled" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UnidadesEnStock)
                @Html.TextBoxFor(m => m.UnidadesEnStock, new { @class = "form-control col-md-6", disabled = "disabled" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PrecioVenta)
                @Html.TextBoxFor(m => m.PrecioVenta, new { @class = "form-control col-md-6", disabled = "disabled" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Suspendido)
                @Html.TextBoxFor(m => m.Suspendido, new { @class = "form-control col-md-6", disabled = "disabled" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Proveedor)
                @Html.TextBoxFor(m => m.Proveedor.ProveedorId, new { @class = "form-control col-md-6", disabled = "disabled" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PrecioCosto)
                @Html.TextBoxFor(m => m.PrecioCosto, new { @class = "form-control col-md-6", disabled = "disabled" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NivelDeReposicion)
                @Html.TextBoxFor(m => m.NivelDeReposicion, new { @class = "form-control col-md-6", disabled = "disabled" })
            </div>

            <div class="form-group">
                <a href="@Url.Action("Index", "Productos")" class="btn btn-success">Volver</a>

            </div>
        </div>
    </div>
}


