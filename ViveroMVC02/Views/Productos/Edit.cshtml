
@model ViveroMVC02.ViewModels.Producto.ProductoEditViewModels
@{
    ViewBag.Title = "Edit";
}

<h2>Editar Producto</h2>
<hr />
@using (Html.BeginForm("Edit", "Productos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
  <div class="row">
      <div class="col-md-6">
          <div class="form-group">
              @Html.LabelFor(m => m.CategoriaId)
              @Html.DropDownListFor(m => m.CategoriaId, new SelectList(Model.Categorias, "CategoriaId", "NombreCategoria"), "Seleccione Categoría", new { @class = "form-control", autofocus = "autofocus" })
              @Html.ValidationMessageFor(m => m.CategoriaId, "", new { @class = "text-danger" })
          </div>
          <div class="form-group">
              @Html.LabelFor(m => m.NombreProducto)
              @Html.TextBoxFor(m => m.NombreProducto, new { @class = "form-control" })
              @Html.ValidationMessageFor(m => m.NombreProducto, "", new { @class = "text-danger" })
          </div>
          <div class="form-group">
              @Html.LabelFor(m => m.ProveedorId)
              @Html.DropDownListFor(m => m.ProveedorId, new SelectList(Model.Proveedores, "ProveedorId", "RazonSocial"), "Seleccione Proveedor", new { @class = "form-control" })
              @Html.ValidationMessageFor(m => m.ProveedorId, "", new { @class = "text-danger" })
          </div>
          <div class="form-group">
              @Html.LabelFor(m => m.UnidadesEnStock)
              @Html.TextBoxFor(m => m.UnidadesEnStock, new { @class = "form-control" })
              @Html.ValidationMessageFor(m => m.UnidadesEnStock, "", new { @class = "text-danger" })
          </div>

          <div class="form-group">
              @Html.LabelFor(m => m.PrecioCosto)
              @Html.TextBoxFor(m => m.PrecioCosto, new { @class = "form-control" })
              @Html.ValidationMessageFor(m => m.PrecioCosto, "", new { @class = "text-danger" })
          </div>

          <div class="form-group">
              @Html.LabelFor(m => m.PrecioVenta)
              @Html.TextBoxFor(m => m.PrecioVenta, new { @class = "form-control" })
              @Html.ValidationMessageFor(m => m.PrecioVenta, "", new { @class = "text-danger" })
          </div>

          <div class="form-group">
              <button class="btn btn-primary" type="submit">Guardar</button>
              <a href="@Url.Action("Index", "Productos")" class="btn btn-success">Volver</a>

          </div>

      </div>

  </div>
}