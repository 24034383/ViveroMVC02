
@model ViveroMVC02.ViewModels.Localidad.LocalidadListViewModels
@{
    ViewBag.Title = "Delete";
}

<h2>Borrar Localidad</h2>
<hr />
@using (Html.BeginForm("Delete", "Localidades", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()


    <div class="form-group">
        @Html.LabelFor(m => m.NombreLocalidad)
        @Html.TextBoxFor(m => m.NombreLocalidad, new { @class = "form-control col-md-6", disabled = "disabled" })
    </div>

    <div class="form-group">
        <button class="btn btn-danger" type="submit">Borrar</button>
        <a href="@Url.Action("Index", "Localidades")" class="btn btn-success">Volver</a>

    </div>
}

