
@model ViveroMVC02.ViewModels.Proveedor.ProveedorEditViewModels
@{ ViewBag.Title = "Edit"; }
<div class="container">
    <h2>Editar Proveedor</h2>
    <hr />
    @using (Html.BeginForm("Edit", "Proveedores", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.ProveedorId)
        <div class="form-group">
            @Html.LabelFor(m => m.RazonSocial)
            @Html.TextBoxFor(m => m.RazonSocial, new { @class = "form-control", autofocus = "autofocus" })
            @Html.ValidationMessageFor(m => m.RazonSocial, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PersonaDeContacto)
            @Html.TextBoxFor(m => m.PersonaDeContacto, new { @class = "form-control", autofocus = "autofocus" })
            @Html.ValidationMessageFor(m => m.PersonaDeContacto, "", new { @class = "text-danger" })
        </div>
        @*<div class="row">*@
        <div class="col">
            <div class="form-group">
                @Html.LabelFor(m => m.Cuit)
                @Html.TextBoxFor(m => m.Cuit, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Cuit, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Direccion)
                @Html.TextBoxFor(m => m.Direccion, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Direccion, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="col">
            <div class="form-group">
                @Html.LabelFor(m => m.TelefonoFijo)
                @Html.TextBoxFor(m => m.TelefonoFijo, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TelefonoFijo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.TelefonoMovil)
                @Html.TextBoxFor(m => m.TelefonoMovil, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TelefonoMovil, "", new { @class = "text-danger" })
            </div>

        </div>
        @*</div>*@

        <div class="form-group">
            @Html.LabelFor(m => m.ProvinciaId)
            @Html.DropDownListFor(m => m.ProvinciaId, new SelectList(Model.Provincias, "ProvinciaId", "NombreProvincia"), "Seleccione Provincia", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Provincias, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LocalidadId)
            @Html.DropDownListFor(m => m.LocalidadId, new SelectList(Model.Localidades, "LocalidadId", "NombreLocalidad"), "Seleccione Localidad", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.LocalidadId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.CorreoElectronico)
            @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CorreoElectronico, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            <button class="btn btn-primary" type="submit">Guardar</button>
            <a href="@Url.Action("Index", "Proveedores")" class="btn btn-success">Volver</a>

        </div>}
</div>
@section scripts
 {
    <script>
        $(document).ready(function () {
            $("#ProvinciaId").change(function() {
                $("#LocalidadId").empty();
            });

            $("#ProvinciaId").change(function() {
                $("#LocalidadId").empty();
                $("#LocalidadId").append('<option value="0">[Seleccionar Localidad]</option>');

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetLocalidades")',
                    dataType: 'json',
                    data: {
                        ProvinciaId: $("#ProvinciaId").val()

                    },
                    success: function(Localidades) {
                        $.each(Localidades ,
                            function(i, localidad) {
                                $("#LocalidadId").append('<option value="' + localidad.LocalidadId + '">' + localidad.NombreLocalidad + '</option>');
                            });
                    },
                    error: function(ex) {
                        alert('Error al intentar cargar las Localidades.' + ex);
                    }
                });
                return false;
            });
        });

    </script>

}



