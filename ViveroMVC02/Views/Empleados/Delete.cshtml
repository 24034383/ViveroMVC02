@model ViveroMVC02.ViewModels.Empleado.EmpleadoListViewModels
@{
    ViewBag.Title = "Delete";
}

<h2>Borrar Empleado</h2>
<hr />
@using (Html.BeginForm("Delete", "Empleados", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Nombre)
        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @readonly = true })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Apellido)
        @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", @readonly = true })
    </div>
    @*<div class="row">*@
    <div class="col">

        <div class="form-group">
            @Html.LabelFor(m => m.Provincia)
            @Html.TextBoxFor(m => m.Provincia, new { @class = "form-control", @readonly = true })
        </div>

    </div>
    <div class="col">
        <div class="form-group">
            @Html.LabelFor(m => m.Localidad)
            @Html.TextBoxFor(m => m.Localidad, new { @class = "form-control", @readonly = true })
        </div>

    </div>
    @*</div>*@


    <div class="form-group">
        <button class="btn btn-danger" type="submit">Borrar</button>
        <a href="@Url.Action("Index", "Empleados")" class="btn btn-success">Volver</a>

    </div>
}



